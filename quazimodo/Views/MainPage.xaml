                                     Style="{StaticResource positiveEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.alien}" />
                    </FlexLayout>
                </Grid>

                <Grid Margin="{StaticResource defaultOffset}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <BoxView Grid.RowSpan="2"
                             CornerRadius="{StaticResource defaultOffset}"
                             BackgroundColor="{StaticResource white4}" />
                    <Frame Grid.Row="0"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="Start">
                        <Label Style="{StaticResource soundCategoryStyle}"
                               TextColor="{StaticResource lightGray}"
                               Text="{x:Static resources:Localization.NeutralHeader}" />
                    </Frame>
                    <quazimodo:SmileButtonsFlexLayout Grid.Row="1"
                                                      ItemSource="{Binding NeutralSoundList}" 
                                                      ItemStyle="{StaticResource neutralEmojiItem}"
                                                      Style="{StaticResource flexLayoutStyle}"/>
                </Grid>

                <!-- negative -->
                <Grid Margin="{StaticResource defaultOffset}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <BoxView Grid.RowSpan="2"
                             CornerRadius="{StaticResource defaultOffset}"
                             BackgroundColor="{StaticResource white5}" />
                    <Frame Grid.Row="0"
                           HorizontalOptions="CenterAndExpand"
                           VerticalOptions="Start">
                        <Label Style="{StaticResource soundCategoryStyle}"
                               TextColor="{StaticResource lightYellow}"
                               Text="{x:Static resources:Localization.NegativeHeader}" />
                    </Frame>
                    <quazimodo:SmileButtonsFlexLayout Grid.Row="1"
                                                      ItemSource="{Binding NegativeSoundList}" 
                                                      ItemStyle="{StaticResource negativeEmojiItem}"
                                                      Style="{StaticResource flexLayoutStyle}">
                        <ImageButton Source="anger.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     IsVisible="False"
                                     CommandParameter="{x:Static constants:ImageIdConstants.Anger}" />
                        <ImageButton Source="poutine.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.poutine}" />
                        <ImageButton Source="sadness.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     IsVisible="False"
                                     CommandParameter="{x:Static constants:ImageIdConstants.Sadness}" />
                        <ImageButton Source="sadface.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.sadface}" />
                        <ImageButton Source="confusingq.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.confusingq}" />
                        <ImageButton Source="silent.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.silentq}" />

                        <ImageButton Source="death.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.death}" />
                        <ImageButton Source="disturb.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.disturb}" />
                        <ImageButton Source="sad.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.sad}" />
                        <ImageButton Source="mouthfull.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.mouthfull}" />
                        <ImageButton Source="lying.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.lyingq}" />
                        <ImageButton Source="flushed.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.flushed}" />

                        <ImageButton Source="zipped.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.zipped}" />
                        <ImageButton Source="medicalmask.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.medicalmask}" />
                        <ImageButton Source="sneezing.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.sneezing}" />
                        <ImageButton Source="thinking.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.thinking}" />
                        <ImageButton Source="sweat.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     IsVisible="False"
                                     CommandParameter="{x:Static constants:ImageIdConstants.Sweat}" />
                        <ImageButton Source="tears.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.tears}" />

                        <ImageButton Source="snoring.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.snoring}" />
                        <ImageButton Source="crying.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.crying}" />
                        <ImageButton Source="sweattongue.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.sweattongue}" />
                        <ImageButton Source="teasing.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.teasing}" />
                        <ImageButton Source="angryface.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.angryface}" />
                        <ImageButton Source="frown.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.frown}" />

                        <ImageButton Source="irritated.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.irritated}" />
                        <ImageButton Source="surprised.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.surprised}" />
                        <ImageButton Source="dizzy.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.dizzy}" />
                        <ImageButton Source="shock.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.Wow}" />
                        <ImageButton Source="angry.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.angry}" />
                        <ImageButton Source="puke.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.puke}" />

                        <ImageButton Source="explodes.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.explodes}" />
                        <ImageButton Source="chilling.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.chilling}" />
                        <ImageButton Source="edevil.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.edevil}" />
                        <ImageButton Source="devilq.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.devilq}" />
                        <ImageButton Source="expressionless.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     CommandParameter="{x:Static enums:SoundParameter.expressionless}" />
                        <ImageButton Source="dead.png"
                                     Style="{StaticResource negativeEmojiItem}"
                                     IsVisible="False"
